  <text x="600" y="320" text-anchor="middle" font-family="sans-serif" font-size="36" fill="#ffffff">
    Premium Luxury Perfumes
  </text>
  
  <text x="600" y="380" text-anchor="middle" font-family="sans-serif" font-size="24" fill="#cccccc">
    Discover Exquisite Fragrances
  </text>
  
  <!-- Perfume bottle silhouette -->
  <g transform="translate(500, 420)">
    <rect x="0" y="0" width="40" height="80" rx="5" fill="url(#goldGradient)" opacity="0.3"/>
    <rect x="10" y="-20" width="20" height="25" rx="3" fill="url(#goldGradient)" opacity="0.5"/>
    <circle cx="20" cy="-30" r="8" fill="url(#goldGradient)" opacity="0.4"/>
  </g>
  
  <g transform="translate(660, 420)">
    <rect x="0" y="0" width="40" height="80" rx="5" fill="url(#goldGradient)" opacity="0.3"/>
    <rect x="10" y="-20" width="20" height="25" rx="3" fill="url(#goldGradient)" opacity="0.5"/>
    <circle cx="20" cy="-30" r="8" fill="url(#goldGradient)" opacity="0.4"/>
